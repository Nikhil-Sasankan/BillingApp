<?xml version="1.0" encoding="UTF-8"?> <?import javafx.scene.layout.VBox?> <?import javafx.scene.control.Label?> <?import javafx.scene.control.Button?> <?import javafx.geometry.Insets?> <?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?> 
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.PrimaryController">
    <children>
        <Label text="Welcome to Shop Inventory App">
            <font>
                <Font size="40.0"></Font>
            </font>
        </Label>
        <HBox spacing="30" alignment="CENTER"> 
            <Button prefWidth="200" prefHeight="200" fx:id="primaryButton" text="View / Edit Inventory items"
            onAction="#switchToSecondary" stylesheets="@styles.css" styleClass="view-button" />      
            <Button prefWidth="200" prefHeight="200" fx:id="billerButton" text="Billing"
            onAction="#switchToBilling" stylesheets="@styles.css" styleClass="billing-button" />  
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>