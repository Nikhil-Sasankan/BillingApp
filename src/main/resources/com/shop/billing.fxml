<?xml version="1.0" encoding="UTF-8"?>
 <?import javafx.scene.layout.VBox?>
  <?import javafx.scene.layout.HBox?> 
  <?import javafx.scene.control.TableView?> 
  <?import javafx.scene.control.TextField?> 
  <?import javafx.scene.control.cell.PropertyValueFactory?> 
  <?import javafx.scene.control.TableColumn?> 
  <?import javafx.scene.control.TableCell?> 
  <?import javafx.scene.control.Label?> 
  <?import javafx.scene.control.Button?> 
  <?import javafx.scene.text.Font?> 
    <?import javafx.scene.text.Text?> 
    <?import javafx.geometry.Insets?> 
    <?import com.shop.SelectValueFactory?>
    <?import javafx.util.Callback?>
    <?import javafx.scene.control.ComboBox?>
<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.Billing">
    <children>
        <Label text="Billing">
            <font>
                <Font size="40.0"></Font>
            </font>
        </Label>
        <Button fx:id="secondaryButton" text="Back" onAction="#switchToPrimary" prefWidth="100" />
    </children>
    <padding>
        <Insets bottom="20.0" left="5.0" right="5.0" top="20.0" />
    </padding>
    <HBox alignment="CENTER" spacing="40">
        <VBox alignment="CENTER_RIGHT">
            <TableView fx:id="tableView" prefWidth="400">
                <columns>
                    <TableColumn prefWidth="120" text="Item Name">
                        <cellValueFactory>
                            <PropertyValueFactory property="name" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="50" text="Qty">
                        <cellValueFactory>
                            <PropertyValueFactory property="quantity" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="90" text="Price">
                        <cellValueFactory>
                            <PropertyValueFactory property="price" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="90" text="Total">
                        <cellValueFactory>
                            <PropertyValueFactory property="itemtotal" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="deleteColumn" prefWidth="40" text=" " />
                </columns>
            </TableView>
            <Label fx:id="finalTotal" text=" TOTAL :  Rs â‚¹  ">
                <font>
                    <Font size="20.0"></Font>
                </font>
            </Label>
        </VBox>
        <VBox alignment="TOP_CENTER" spacing="10"  stylesheets="@styles.css" styleClass="mybox-border">
            <HBox spacing="10">
                <TextField fx:id="nameField" promptText="Name" />
                <TextField fx:id="quantityField" promptText="Quantity" />
                <TextField fx:id="priceField" promptText="Price" />
                <Button fx:id="addbutton" text="Add Item" onAction="#addBillItem"
                    stylesheets="@styles.css"
                    styleClass="add-button"></Button>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Select item">
                    <font>
                        <Font size="13.0"></Font>
                    </font>
                </Label>
                <ComboBox fx:id="itemComboBox" promptText="Select Item" editable="true" />
            </HBox>
            <VBox alignment="CENTER" spacing="90" stylesheets="@styles.css" styleClass="mybox-border2">
                <HBox alignment="CENTER" spacing="10">
                    <Label text="NAME : "> <font> <Font size="13.0"></Font> </font></Label>
                    <TextField fx:id="personnameField" promptText="Person Name" />
                    <Label text="MOB NO :"> <font> <Font size="13.0"></Font> </font></Label>
                    <TextField fx:id="mobileField" promptText="Mob No." /> 
                </HBox>
                <Button fx:id="createbutton" text="Create Bill" onAction="#createBillItem"
                    stylesheets="@styles.css"
                    styleClass="create-button"></Button>
            </VBox>

        </VBox>

    </HBox>
</VBox>